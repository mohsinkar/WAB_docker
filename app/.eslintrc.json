{
    "env": {
        "browser": true
    },
    "globals": {
        "define": true,
        "dojo": true,
        "dijit": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "no-console": 0,
        "no-unused-vars": 1,
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}